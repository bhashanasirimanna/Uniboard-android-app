<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".explorepage">

    <TextView
        android:id="@+id/explorecircle"
        android:layout_width="800dp"
        android:layout_height="800dp"
        android:layout_marginTop="236dp"
        android:background="@drawable/circle_pink_purple_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/homelayout"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Ehomebtnimage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/home_white" />

            <TextView
                android:id="@+id/Ehomebtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/homebtn"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/searchlayout"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Esearchimage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/search" />

            <TextView
                android:id="@+id/Esearchbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/searchbtn"
                android:textAlignment="center"
                android:textColor="@color/purplepink"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/favoritelayout"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Efavoriteimage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/heart_white" />

            <TextView
                android:id="@+id/Efavoritbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/favouritebtn"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/accountlayout"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Eaccountimage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/user_white" />

            <TextView
                android:id="@+id/Eaccountbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accountbtn"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewxploretitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:text="@string/exploretitle"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/searchbar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/boarderbg"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewxploretitle">

        <EditText
            android:id="@+id/searchtext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/searchbarhint"
            android:inputType="text"
            android:textColorHint="@color/purplepink" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/search" />
    </LinearLayout>

    <TextView
        android:id="@+id/roombtn"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/boarderbg"
        android:gravity="center"
        android:text="@string/room"
        android:textColor="@color/purplepink"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/anexxesbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchbar" />

    <TextView
        android:id="@+id/anexxesbtn"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/boarderbg"
        android:gravity="center"
        android:text="@string/anexx"
        android:textColor="@color/purplepink"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/roombtn"
        app:layout_constraintTop_toBottomOf="@+id/searchbar" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:background="@color/offwhite"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roombtn">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="201dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/anexxes" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/trio"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/adderss"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/bedroom" />

                <TextView
                    android:id="@+id/bedcard1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/bedcard1"
                    android:textColor="@color/gray"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/kitchen" />

                <TextView
                    android:id="@+id/kichen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/kichencard1"
                    android:textColor="@color/gray"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/bathtub" />

                <TextView
                    android:id="@+id/washroom"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/washroomcard1"
                    android:textColor="@color/gray"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pricecard1"
                android:textColor="@color/purplepink"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        android:background="@color/offwhite"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:id="@+id/nimageView4"
            android:layout_width="201dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/anexxes" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nushani"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nushani"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/naddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/adderss"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/nbed"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/bedroom" />

                <TextView
                    android:id="@+id/nbedcard1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/bedcard1"
                    android:textColor="@color/gray"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/nimageView5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/kitchen" />

                <TextView
                    android:id="@+id/nkichen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/kichencard1"
                    android:textColor="@color/gray"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/nimageView7"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/bathtub" />

                <TextView
                    android:id="@+id/nwashroom"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/washroomcard1"
                    android:textColor="@color/gray"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/nprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pricecard1"
                android:textColor="@color/purplepink"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        android:background="@color/offwhite"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <ImageView
            android:id="@+id/animageView4"
            android:layout_width="201dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/anexxes" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/anushani"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nushani"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/anaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/adderss"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/anbed"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/bedroom" />

                <TextView
                    android:id="@+id/anbedcard1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/bedcard1"
                    android:textColor="@color/gray"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/animageView5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/kitchen" />

                <TextView
                    android:id="@+id/ankichen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/kichencard1"
                    android:textColor="@color/gray"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/animageView7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/bathtub" />

                <TextView
                    android:id="@+id/anwashroom"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/washroomcard1"
                    android:textColor="@color/gray"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/anprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pricecard1"
                android:textColor="@color/purplepink"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>